<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tb_Input" HorizontalAlignment="Left" Margin="10,16,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="656" Height="36" FontSize="16" VerticalContentAlignment="Center" KeyDown="tb_Input_KeyDown"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="681,16,0,0" VerticalAlignment="Top" Height="36" Width="109" FontSize="16" Click="Button_Click" Background="#FFCCCCCC"/>
        <RichTextBox x:Name="rtb_Output" Margin="10,70,10,10" FontSize="16" Background="#FF333333" Foreground="White" Padding="16,16,16,16">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
